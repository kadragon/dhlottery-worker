{
  "name": "dhlottery-worker",
  "version": "1.0.0",
  "description": "Cloudflare Workers-based automated lottery purchase and notification service",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "precommit": "npm run check:fix && npm run typecheck",
    "prepare": "husky"
  },
  "keywords": ["cloudflare-workers", "lottery", "automation", "telegram-bot"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.10.2",
    "husky": "^9.1.7",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.95.0"
  },
  "dependencies": {}
}
