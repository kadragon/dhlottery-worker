{
  "name": "dhlottery-worker",
  "version": "1.0.0",
  "description": "Cloudflare Workers-based automated lottery purchase and notification service",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "precommit": "npm run check:fix && npm run typecheck",
    "prepare": "npx simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run check:fix && npm run typecheck"
  },
  "keywords": [
    "cloudflare-workers",
    "lottery",
    "automation",
    "telegram-bot"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.10.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.95.0"
  }
}
