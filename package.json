{
  "name": "dhlottery-worker",
  "version": "1.0.0",
  "description": "GitHub Actions-based automated lottery purchase and notification service",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "tsx src/run.ts",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "precommit": "npm run check:fix && npm run typecheck",
    "prepare": "npx simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run check:fix && npm run typecheck"
  },
  "keywords": ["github-actions", "lottery", "automation", "telegram-bot"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.2",
    "dotenv": "^17.2.3",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  }
}
